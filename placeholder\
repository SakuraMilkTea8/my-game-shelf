            <!-- like button -->
          <%=link_to toggle_favorite_user_path(user), remote: true, method: :post do %>
            <%= render 'users/like_button', user: user %>
          <% end %>

          <h3>Liked users</h3>
          <div class="favorites">
            <% @favorite_users.each do |user| %>
              <%= render 'user', user: user %>
            <% end %>



