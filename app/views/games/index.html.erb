<div class="banner">
  <h1>
    My Game Shelf
  </h1>
</div>
<div class="container">
  <div class="game-cards">
    <% @games.each do |game| %>
      <%= link_to game_path(game) do %>
        <div class="game-card">
          <img src="<%= game.image_url %>" alt="Boxart for <%= game.title %>">
          <h3>
            <%= game.title %>
          </h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
